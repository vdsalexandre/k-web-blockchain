{{> parts/header }}
    <body>
        <div class="container">
            <h2 class="center-align">Wicoin blockchain</h2>
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <form class="col s6 offset-s4" method="post" action="/blockchain/login">
                            <div class="row">
                                <div class="col s12">
                                    <div class="input-field col s8" autofocus>
                                        <input id="email"
                                               type="email"
                                               class="validate">
                                        <label for="email">Email</label>
                                        <span class="helper-text" data-error="Wrong format for an email" data-success="right"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <div class="input-field col s8">
                                        <input id="password"
                                               type="password"
                                               class="validate"
                                               minlength="12"
                                               maxlength="40">
                                        <label for="password">Password</label>
                                        <span class="helper-text" data-error="Password is too short (between 12 and 40 characters)" data-success="right"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s9 center-align">
                                    <button class="btn waves-effect waves-light" type="submit" name="login">Login
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
{{> parts/footer }}