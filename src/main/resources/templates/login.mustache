{{> parts/header }}
    <body>
        <div class="container">
            <h2 class="center-align">Wicoin blockchain</h2>
            <div class="row">
                <div class="col s12">
                    <div class="row valign-wrapper">
                        {{#errorMessage}}
                            <input id="error-message" type="hidden" value="{{ errorMessage }}">
                        {{/errorMessage}}
                        <form class="col s4 m8 l12" method="post" action="/blockchain/login">
                            <div class="row">
                                <div class="col s12">
                                    <div class="input-field col s12 l6">
                                        <input id="email"
                                               type="email"
                                               name="email"
                                               class="validate active"
                                               autofocus>
                                        <label for="email">Email</label>
                                        <span class="helper-text" data-error="Wrong format for an email" data-success="right format"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <div class="input-field col s12 l6">
                                        <input id="password"
                                               type="password"
                                               name="password"
                                               class="validate"
                                               minlength="12"
                                               maxlength="40">
                                        <label for="password">Password</label>
                                        <span class="helper-text" data-error="Password is too short (between 12 and 40 characters)" data-success="right format"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <div class="input-field col s12 l6 offset-l5 offset-s3">
                                        <button class="btn waves-effect waves-light"
                                                type="submit"
                                                name="login"
                                                onclick="validateData(event)">Login
                                            <i class="material-icons right">send</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
{{> parts/footer }}