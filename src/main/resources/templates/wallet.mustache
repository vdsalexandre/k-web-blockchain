{{> parts/header }}
<div class="container">
    {{> parts/title }}
    <div class="row">
        <div class="col s8">
            <h4 class="center-align">Welcome
                <span class="highlight-span">
                            {{ username }} <i class="material-icons green-text">verified_user</i>
                        </span>
            </h4>
            {{# wallet }}
                <h5 class="center-align">Wallet address: <span class="highlight-span" id="span-wallet-id">{{ wallet.walletId }}</span></h5>
                <h6 class="center-align">{{ wallet.balance }} Wicoins</h6>
                <img id="qrcode" src="" alt="Your wallet address" title="Your wallet address">
                <h6 class="center-align" title="they are used to regenerate the private key">Save your private words</h6>
                <ul>
                    {{# wallet.privateWords }}
                        <li>{{ wallet.privateWords }}</li>
                    {{/ wallet.privateWords }}
                </ul>
            {{/ wallet }}
            {{^ wallet }}
                {{> parts/new-wallet }}
            {{/ wallet }}
            <ul>
                <li>
                    {{> parts/menu-home }}
                </li>
                <li>
                    {{> parts/menu-logout }}
                </li>
            </ul>
        </div>
    </div>
</div>
{{> parts/footer }}