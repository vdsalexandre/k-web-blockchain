{{> parts/header }}
<div class="container">
    {{> parts/title }}
    <div class="row">
        <div class="col s8">
            <h4 class="center-align">Welcome
                <span class="user-span">
                            {{ username }} <i class="material-icons green-text">verified_user</i>
                        </span>
            </h4>
            {{# walletid }}
                {{# walletbalance }}
                    <h5 class="center-align">Wallet {{ walletid }} : {{ walletbalance }} Wicoins </h5>
                {{/ walletbalance }}
            {{/ walletid }}

            <div class="col s6">
                <form method="post" action="wallet/new">
                    <div class="row">
                        <div class="col s12">
                            <div class="center-align">
                                <button class="btn waves-effect waves-light"
                                        type="submit">Create
                                    <i class="material-icons right">account_balance_wallet</i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <ul>
                <li>
                    <div class="row center-align">
                        <div class="col s6">
                            <div class="input-field col s12 l5">
                                <a class="btn tooltipped"
                                   href="home"
                                   data-position="top"
                                   data-tooltip="Check your wallet">Home
                                    <i class="material-icons right">home</i>
                                </a>
                            </div>
                        </div>
                    </div>
                </li>
                <li>Transactions history</li>
            </ul>
            {{> parts/logout }}
        </div>
    </div>
</div>
{{> parts/footer }}